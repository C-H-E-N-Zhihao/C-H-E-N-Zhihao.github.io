{% comment %}
  Unified skills entry renderer for both formats
{% endcomment %}

<div class="card-text font-weight-light">
  {% for entry in include.entries %}
    <div class="skill-item">
      {% if entry.icon %}
        <i class="{{ entry.icon }}"></i>
      {% endif %}
      <strong>
        {%- if entry.name %}{{ entry.name }}{% elsif entry.label %}{{ entry.label }}{% endif -%}
        {%- if entry.level %} ({{ entry.level }}){% endif %}:</strong
      >
      {% if entry.keywords %}
        {% for keyword in entry.keywords %}
          {% if forloop.last %}
            {{ keyword }}
          {% else %}
            {{ keyword }},
          {% endif %}
        {% endfor %}
      {% elsif entry.details %}
        {{ entry.details }}
      {% endif %}
    </div>
  {% endfor %}
</div>

<style>
  .skill-item {
    padding: 0.5rem 0;
  }
</style>
